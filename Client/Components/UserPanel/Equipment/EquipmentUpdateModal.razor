@using OpenOsp.Model.Dtos
@using OpenOsp.Client.Components.Forms

<label for="member-update-modal" class="btn btn-primary btn-outline modal-button">Add</label> 
<input type="checkbox" id="member-update-modal" class="modal-toggle"> 
<div class="modal">
  <EditForm Model="@_updateDto" OnValidSubmit="HandleCreate" class="modal-box">
    <h1 class="mb-5 text-center text-2xl font-bold">Update an equipment</h1>
    <DataAnnotationsValidator/>
    <LabeledInputText @bind-Value="_updateDto.Brand"/>
    <LabeledInputText @bind-Value="_updateDto.Model"/>
    <LabeledInputText @bind-Value="_updateDto.RegistryNumber"/>
    <div class="modal-action">
      <button type="submit" for="member-update-modal" class="btn btn-primary">Create</button>
      <label for="member-update-modal" class="btn">Cancel</label>
    </div>
  </EditForm>
</div>

@code {
  
  [CascadingParameter]
  private EquipmentReadDto _readDto { get; set; }

  private EquipmentCreateDto _updateDto { get; set; } = new();

  protected override Task OnInitializedAsync() {
    _updateDto.Brand = _readDto.Brand;
    _updateDto.Model = _readDto.Model;
    _updateDto.RegistryNumber = _readDto.RegistryNumber;
    return base.OnInitializedAsync();
  }

  private void HandleCreate() {
  }

}
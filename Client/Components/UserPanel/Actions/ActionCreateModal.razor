@using OpenOsp.Model.Dtos
@using OpenOsp.Client.Components.Forms

<label for="member-create-modal" class="btn btn-accent modal-button">Add</label> 
<input type="checkbox" id="member-create-modal" class="modal-toggle"> 
<div class="modal">
  <EditForm Model="@_createDto" OnValidSubmit="HandleCreate" class="modal-box">
    <h1 class="mb-5 text-center text-2xl font-bold">Create an action</h1>
    <DataAnnotationsValidator/>
    <LabeledInputText @bind-Value="_createDto.Location"/>
    <div class="modal-action">
      <button type="submit" for="member-create-modal" class="btn btn-primary">Create</button>
      <label for="member-create-modal" class="btn">Cancel</label>
    </div>
  </EditForm>
</div>

@code {

  private ActionCreateDto _createDto { get; set; } = new();

  private void HandleCreate() {
  }

}